@{
    ViewBag.Title = "SearchPatient";
}

<h2>Search Patient</h2>
<hr/>


<input type="text" id="searchPatient" onkeyup="searchClick()" style="margin: 0 1%;"/>

<div id="Results"></div>

<script type="text/javascript">
    function searchClick() {
        var searchText = $("#searchPatient").val();

        if (searchText === "") {
            $("#Results").html("");
        } else {
            $.ajax({
                type: "POST",
                url: "/Patient/Search",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({
                    patient: searchText,
                }),

                success: function (data) {
                    $("#Results").html(data);
                },
            });
        }
    }
</script>