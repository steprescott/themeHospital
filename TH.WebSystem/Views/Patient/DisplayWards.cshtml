@using TH.Domain.Other
﻿@model TH.WebSystem.Models.DisplayWardsViewModel

<h2>Wards</h2>

<table class="table">
    <tr>
        <th>
            Ward number
        </th>
        <th>
            Bed number
        </th>
        <th>
            Options
        </th>
    </tr>
    @foreach (Ward ward in Model.Wards)
    {
        foreach (Bed bed in ward.Beds.OrderBy(b => b.Number))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ward.Number)
                </td>
                <td>
                    @bed.Number
                </td>
                <td>
                    @Html.ActionLink("Assign to bed", "AssignBed", "Patient", new { bedId = bed.BedId, wardId = bed.WardId, patientId = Model.PatientId }, null)
                </td>
            </tr>
        }
    }
</table>