@using TH.Domain.Other
@model TH.WebSystem.Models.VisitDetailsViewModel

<h1>Visit details</h1>
<hr />

<table>
    
</table>

<h4>Notes</h4>
@if (Model.Visit.Notes.Count > 0)
{
    <table class="table">
        <tr>
            <th>Date created</th>
            <th>Content</th>
        </tr>
        @foreach (Note note in Model.Visit.Notes)
        {
            <tr>@Html.DisplayForModel(note.DateCreated)</tr>
            <tr>@Html.DisplayForModel(note.Content)</tr>
        }
    </table>
    <p>
        <button>@Html.ActionLink("Create new note", "createNote", new { id = Model.Visit.VisitId })</button>
    </p>
}
else
{
    @Html.Raw("No notes for visit. You can create a new one ");
    @Html.ActionLink("here.", "CreateNote", new { id = Model.Visit.VisitId })
}
