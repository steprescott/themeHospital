@model List<TH.Domain.User.Doctor>

@Html.ActionLink("Back to Dashboard", "Index", "Consultant", new { @class = "button" })
<h1>Available doctors for your team</h1>

@if (Model.Any())
{
    <table>
        <tr>
            <th>Firstname</th>
            <th>Surname</th>
            <th></th>
        </tr>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>
                    @Html.ActionLink("Add", "AddToTeam", new { doctorId = doctor.UserId })
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Raw("No Doctors available")
}