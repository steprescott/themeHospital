            @Html.LabelFor(model => model.MedicalStaff)
            @Html.DropDownListFor(model => model.AdministeredByStaffMemberId, new SelectList(Model.MedicalStaff, "UserId", "FullName", null))
            @Html.LabelFor(model => model.ScheduledDate)
            @Html.TextBoxFor(model => model.ScheduledDate)
            @Html.LabelFor(model => model.DateAdministered)
            @Html.TextBoxFor(model => model.DateAdministered)
            @Html.LabelFor(model => model.NoteContent)
            @Html.TextAreaFor(model => model.NoteContent)
            <input type="submit" value="Create" class="button">
        }
    </div>

