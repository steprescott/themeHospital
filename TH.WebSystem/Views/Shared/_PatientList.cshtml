@model List<TH.Domain.User.Patient>

<table>

    @if (Model.Count > 0)
    {
        <tr>
            <th>Firstname</th>
            <th>Surname</th>
            <th></th>
        </tr>
        foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>
                    @Html.ActionLink("Options", "Options", "Patient", new { id = patient.UserId }, null)
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                No result found.
            </td>
        </tr>
    }

</table>